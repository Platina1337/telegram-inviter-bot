# Inviter Bot Environment Configuration
# Copy this file to .env and fill in the values

# Bot token from @BotFather
BOT_TOKEN=

# Parser service URL (default: http://localhost:8001)
PARSER_SERVICE_URL=http://localhost:8001

# Admin user IDs (comma-separated)
ADMIN_IDS=123456789,987654321


# Parser service settings
API_HOST=0.0.0.0
API_PORT=8001

# Sessions directory (relative to parser folder)
SESSIONS_DIR=./sessions

# Database path (relative to parser folder)
DATABASE_PATH=./inviter.db
